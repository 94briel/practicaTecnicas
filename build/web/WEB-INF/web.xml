<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AdminPersona</servlet-name>
        <servlet-class>servlets.AdminPersona</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminPersona</servlet-name>
        <url-pattern>/registro_usuario</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AdminPersonaRegistrada</servlet-name>
        <servlet-class>servlets.AdminPersonaRegistrada</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminPersonaRegistrada</servlet-name>
        <url-pattern>/inicio_sesion</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AdminTelefono</servlet-name>
        <servlet-class>servlets.AdminTelefono</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminTelefono</servlet-name>
        <url-pattern>/pago</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AdminPago</servlet-name>
        <servlet-class>servlets.AdminPago</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminPago</servlet-name>
        <url-pattern>/compra</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AdminIngresarCelular</servlet-name>
        <servlet-class>servlets.AdminIngresarCelular</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminIngresarCelular</servlet-name>
        <url-pattern>/ingresar_cel</url-pattern>
    </servlet-mapping> 
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/index.html</welcome-file>
    </welcome-file-list>
</web-app>
